<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".BIPrayerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BIPrayer"
        tools:targetApi="31"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BIPrayer"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Quran Activity -->
        <activity
            android:name=".activities.QuranActivity"
            android:label="@string/quran_title"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait" />

        <!-- Prayer Times Activity -->
        <activity
            android:name=".activities.PrayerTimesActivity"
            android:label="@string/prayer_times_title"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait" />

        <!-- Camera Activity -->
        <activity
            android:name=".activities.CameraActivity"
            android:label="@string/camera_title"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait" />

        <!-- Settings Activity -->
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/settings_title"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait" />

        <!-- Help Activity -->
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/help_title"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:configChanges="locale|layoutDirection|orientation|screenSize"
            android:screenOrientation="portrait" />

    </application>

</manifest>