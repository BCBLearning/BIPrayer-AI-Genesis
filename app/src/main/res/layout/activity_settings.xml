<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- En-tête -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Statut API -->
        <TextView
            android:id="@+id/textApiStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="12sp"
            android:padding="12dp"
            android:background="#E8F5E8"
            android:layout_marginBottom="16dp" />

        <!-- Section Langue -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/language_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkAutoDetect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_detect"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/languages"
            android:layout_marginBottom="16dp" />

        <!-- Section Préférences -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferences_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkDarkMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:layout_marginBottom="16dp" />

        <!-- Section Calcul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculation_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioCalculationMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioMWL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/method_mwl" />

            <RadioButton
                android:id="@+id/radioISNA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/method_isna" />

            <RadioButton
                android:id="@+id/radioEgypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/method_egypt" />

            <RadioButton
                android:id="@+id/radioMakkah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/method_makkah" />

        </RadioGroup>

        <!-- Section Localisation -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_section"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editLocationLat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/latitude"
                android:inputType="numberDecimal"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/editLocationLng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/longitude"
                android:inputType="numberDecimal"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Boutons d'action - Première ligne -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnTestAPI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_test"
                android:layout_marginEnd="4dp"
                android:background="@color/colorAccent"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_reset"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/colorAccent"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button_save"
                android:layout_marginStart="4dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Bouton Aide - Seconde ligne -->
        <Button
            android:id="@+id/btnHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_help"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Version -->
        <TextView
            android:id="@+id/textAppVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>