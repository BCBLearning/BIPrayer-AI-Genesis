<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- En-tête -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_initializing"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:padding="8dp"
            android:background="#FFF3E0"
            android:layout_marginBottom="16dp" />

        <!-- Section Gemini Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gemini_assistant_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_question"
                android:minHeight="48dp"
                android:gravity="top"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/buttonSend"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/button_ask_gemini"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textViewResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/initial_response_message"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@color/light_gray"
                android:textColor="@color/text_primary" />

        </LinearLayout>

        <!-- Grille des fonctionnalités -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/features_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginBottom="24dp">

            <!-- Coran -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/quran_card_color"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/cardQuran"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quran_icon"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quran_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/quran_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quran_subtitle"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Horaires Prière -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/prayer_card_color"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/cardPrayerTimes"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_icon"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_times_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/prayer_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prayer_subtitle"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Caméra -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/camera_card_color"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/cardCamera"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_icon"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/camera_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_subtitle"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Paramètres -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/settings_card_color"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/cardSettings"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_icon"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_title"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/settings_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_subtitle"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</ScrollView>